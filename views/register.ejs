    <style>
        body {
          font-family: "Montserrat", sans-serif;
          margin: 0;
          padding: 0;
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100vh;
          background-color: #f0f0f0;
        }
    
        .login-container {
          background-color: #fff;
          padding: 20px;
          border-radius: 8px;
          box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    
        .login-form {
          display: flex;
          flex-direction: column;
        }
    
        h2 {
          text-align: center;
          color: #1b2f45;
        }
    
        .input-group {
          margin-bottom: 15px;
        }
    
        label {
          color: #1b2f45;
          font-weight: bold;
        }
    
        input[type="text"],
        input[type="password"] {
          width: 100%;
          padding: 8px;
          border-radius: 4px;
          border: 1px solid #ccc;
          outline: none;
        }
    
        button {
          background-color: #1b2f45;
          color: #fff;
          border: none;
          padding: 10px;
          border-radius: 4px;
          cursor: pointer;
        }
    
        button:hover {
          background-color: #0e1a29;
        }

        .back-to-home {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #1b2f45;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
        }

        .back-to-home:hover {
            background-color: #0e1a29;
        }
      </style>
