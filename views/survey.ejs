<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media and Well-being Survey</title>
    <style>
       body {
      font-family: 'Arial', sans-serif;
      margin: 20px;
      background-color: #f6f6f6;
      color: #333;
      line-height: 1.6;
     }
  
      h1 {
          font-family: 'Montserrat', sans-serif;
          color: #1b2f45;
          text-align: center;
          margin-bottom: 20px;
      }
  
      fieldset {
          margin-bottom: 20px;
          padding: 20px;
          border: 1px solid #ccc;
          border-radius: 8px;
          background-color: #fff;
      }
  
      legend {
          font-weight: bold;
          font-size: 1.2em;
          color: #1b2f45;
          margin-bottom: 10px;
      }
  
      label {
          display: block;
          margin-bottom: 5px;
          color: #1b2f45;
          font-weight: 700; /* Set the font-weight to bold */
      }
      
  
      input[type="number"],
      input[type="radio"],
      input[type="checkbox"] {
          margin-bottom: 10px;
          color: #333;
          border: 1px solid #ccc;
          padding: 8px;
          border-radius: 4px;
      }
  
      input[type="submit"],
      .home-button {
          display: inline-block;
          padding: 10px 20px;
          background-color: #1b2f45;
          color: #fff;
          text-decoration: none;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          transition: background-color 0.3s ease;
      }
  
      input[type="submit"]:hover,
      .home-button:hover {
          background-color: #0e1a29;
      }
  
      /* Additional Styling for radio buttons and checkboxes */
      input[type="radio"] + label,
      input[type="checkbox"] + label {
          margin-right: 15px;
          color: #333;
      }

      input[type="submit"] {
        display: inline-block;
        padding: 12px 20px;
        background-color: #1b2f45;
        color: #fff;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        /* Increased font size for the submit button text */
        font-size: 18px; /* Adjust the font size as needed */
  }

      input[type="submit"]:hover {
          background-color: #0e1a29;
      }

      
    </style>
</head>

<body>
    <h1>Social Media and Well-being Survey</h1>
    <form action="/survey" method="post" onsubmit="return validateForm()" id="surveyForm">
        <!-- Personal Information -->
        <fieldset>
            <legend>Personal Information:</legend>
            <label for="age">Age</label>
            <input type="number" name="age" id="age" required>

            <!-- Add radio buttons for other age groups -->

            <br> <br><label for="gender">Gender</label>
            <input type="radio" name="gender" value="Male" required> Male</label>
            <input type="radio" name="gender" value="Female" required> Female</label>
            <input type="radio" name="gender" value="Nonbinary" required> Nonbinary</label>
            <!-- Add radio buttons for other gender options -->

            <br> <br><label for="relationship">Relationship Status:</label>
            <input type="radio" name="relationship" value="Single" required> Single</label>
            <input type="radio" name="relationship" value="In a relationship" required> In a relationship</label>
            <input type="radio" name="relationship" value="Married" required> Married</label>
            <input type="radio" name="relationship" value="Divorced" required> Divorced</label>

            <!-- Add radio buttons for other relationship statuses -->

            <br> <br><label for="occupation">Occupation Status:</label>
            <input type="radio" name="occupation" value="Retired" required> Retired</label>
            <input type="radio" name="occupation" value="Salaried Worker" required> Salaried Worker</label>
            <input type="radio" name="occupation" value="School Student" required> School Student</label>
            <input type="radio" name="occupation" value="Unemployed" required> Unemployed</label>
            <input type="radio" name="occupation" value="University Student" required> University Student</label>
            <!-- Add radio buttons for other occupation statuses -->

            <br> <br><label for="organizations">Affiliation with Organizations:</label>
            <input type="checkbox" name="organizations[]" value="Company" > Company</label>
            <input type="checkbox" name="organizations[]" value="Government" > Government</label>
            <input type="checkbox" name="organizations[]" value="Private" > Private</label>
            <input type="checkbox" name="organizations[]" value="School" > School</label>
            <input type="checkbox" name="organizations[]" value="University" > University</label>
            <input type="checkbox" name="organizations[]" value="N/A" > N/A</label>
            <!-- Add checkboxes for other organization affiliations -->
        </fieldset>

        <!-- Social Media Usage -->
        <fieldset>
            <legend>Social Media Usage:</legend>
            <label for="use_social_media">Do you use social media?</label>
            <input type="radio" name="use_social_media" value="Yes" required> Yes</label>
            <input type="radio" name="use_social_media" value="No" required> No</label>

            <br> <br><label for="social_media_platforms">Which platforms do you use?</label>
            <input type="checkbox" name="social_media_platforms[]" value="Discord" > Discord</label>
            <input type="checkbox" name="social_media_platforms[]" value="Facebook" > Facebook</label>
            <input type="checkbox" name="social_media_platforms[]" value="Instagram" > Instagram</label>
            <input type="checkbox" name="social_media_platforms[]" value="Pinterest" > Pinterest</label>
            <input type="checkbox" name="social_media_platforms[]" value="Reddit" > Reddit</label>
            <input type="checkbox" name="social_media_platforms[]" value="Snapchat" > Snapchat</label>
            <input type="checkbox" name="social_media_platforms[]" value="TikTok" > TikTok</label>
            <input type="checkbox" name="social_media_platforms[]" value="Twitter" > Twitter</label>
            <input type="checkbox" name="social_media_platforms[]" value="YouTube" > YouTube</label>
            <!-- Add checkboxes for other social media platforms -->

            <br> <br><label for="time_spent">Average Time Spent on Social Media per day:</label>
            <input type="radio" name="time_spent" value="Less than an hour" required> Less than an hour</label>
            <input type="radio" name="time_spent" value="Between 1 and 2 hours" required> Between 1 and 2 hours</label>
            <input type="radio" name="time_spent" value="Between 2 and 3 hours" required> Between 2 and 3 hours</label>
            <input type="radio" name="time_spent" value="Between 3 and 4 hours" required> Between 3 and 4 hours</label>
            <input type="radio" name="time_spent" value="More than 5 hours" required> More than 5 hours</label>
            <!-- Add radio buttons for other time spent options -->
        </fieldset>

        <!-- Additional Questions -->
        <fieldset>
            <legend>Social Media Usage Patterns:</legend>
            <label for="use_without_purpose">How often do you find yourself using social media without a specific purpose?</label>
            <input type="radio" name="use_without_purpose" value="1" id="use_without_purpose_1" required> Never</label>
            <input type="radio" name="use_without_purpose" value="2" id="use_without_purpose_2" required> Rarely</label>
            <input type="radio" name="use_without_purpose" value="3" id="use_without_purpose_3" required> Sometimes</label>
            <input type="radio" name="use_without_purpose" value="4" id="use_without_purpose_4" required> Often</label>
            <input type="radio" name="use_without_purpose" value="5" id="use_without_purpose_5" required> Always</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="distracted_by_social_media">How often do you get distracted by social media when you are busy doing something?</label>
            <input type="radio" name="distracted_by_social_media" value="1" id="distracted_by_social_media_1" required> Never</label>
            <input type="radio" name="distracted_by_social_media" value="2" id="distracted_by_social_media_2" required> Rarely</label>
            <input type="radio" name="distracted_by_social_media" value="3" id="distracted_by_social_media_3" required> Sometimes</label>
            <input type="radio" name="distracted_by_social_media" value="4" id="distracted_by_social_media_4" required> Often</label>
            <input type="radio" name="distracted_by_social_media" value="5" id="distracted_by_social_media_5" required> Always</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="restless_without_social_media">How often do you feel restless if you haven't used social media in a while?</label>
            <input type="radio" name="restless_without_social_media" value="1" id="restless_without_social_media_1" required> Never</label>
            <input type="radio" name="restless_without_social_media" value="2" id="restless_without_social_media_2" required> Rarely</label>
            <input type="radio" name="restless_without_social_media" value="3" id="restless_without_social_media_3" required> Sometimes</label>
            <input type="radio" name="restless_without_social_media" value="4" id="restless_without_social_media_4" required> Often</label>
            <input type="radio" name="restless_without_social_media" value="5" id="restless_without_social_media_5" required> Always</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="easily_distracted">On a scale of 1 (not easily) to 5 (very easily), how easily distracted are you?</label>
            <input type="radio" name="easily_distracted" value="1" id="easily_distracted_1" required> 1</label>
            <input type="radio" name="easily_distracted" value="2" id="easily_distracted_2" required> 2</label>
            <input type="radio" name="easily_distracted" value="3" id="easily_distracted_3" required> 3</label>
            <input type="radio" name="easily_distracted" value="4" id="easily_distracted_4" required> 4</label>
            <input type="radio" name="easily_distracted" value="5" id="easily_distracted_5" required> 5</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="bothered_by_worries">On a scale of 1 (not bothered) to 5 (very bothered), how much are you bothered by worries?</label>
            <input type="radio" name="bothered_by_worries" value="1" id="bothered_by_worries_1" required> 1</label>
            <input type="radio" name="bothered_by_worries" value="2" id="bothered_by_worries_2" required> 2</label>
            <input type="radio" name="bothered_by_worries" value="3" id="bothered_by_worries_3" required> 3</label>
            <input type="radio" name="bothered_by_worries" value="4" id="bothered_by_worries_4" required> 4</label>
            <input type="radio" name="bothered_by_worries" value="5" id="bothered_by_worries_5" required> 5</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="concentration_difficulty">On a scale of 1 (not difficult) to 5 (very difficult), how difficult is it for you to concentrate on things?</label>
            <input type="radio" name="concentration_difficulty" value="1" id="concentration_difficulty_1" required> 1</label>
            <input type="radio" name="concentration_difficulty" value="2" id="concentration_difficulty_2" required> 2</label>
            <input type="radio" name="concentration_difficulty" value="3" id="concentration_difficulty_3" required> 3</label>
            <input type="radio" name="concentration_difficulty" value="4" id="concentration_difficulty_4" required> 4</label>
            <input type="radio" name="concentration_difficulty" value="5" id="concentration_difficulty_5" required> 5</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="compare_self_to_others">How often do you compare yourself to other successful people through the use of social media?</label>
            <input type="radio" name="compare_self_to_others" value="1" id="compare_self_to_others_1" required> Never</label>
            <input type="radio" name="compare_self_to_others" value="2" id="compare_self_to_others_2" required> Rarely</label>
            <input type="radio" name="compare_self_to_others" value="3" id="compare_self_to_others_3" required> Sometimes</label>
            <input type="radio" name="compare_self_to_others" value="4" id="compare_self_to_others_4" required> Often</label>
            <input type="radio" name="compare_self_to_others" value="5" id="compare_self_to_others_5" required> Always</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="opinions_about_comparisons">Following the previous question, how do you feel about these comparisons, generally speaking?</label>
            <input type="radio" name="opinions_about_comparisons" value="1" id="opinions_about_comparisons_1" required> Never</label>
            <input type="radio" name="opinions_about_comparisons" value="2" id="opinions_about_comparisons_2" required> Rarely</label>
            <input type="radio" name="opinions_about_comparisons" value="3" id="opinions_about_comparisons_3" required> Sometimes</label>
            <input type="radio" name="opinions_about_comparisons" value="4" id="opinions_about_comparisons_4" required> Often</label>
            <input type="radio" name="opinions_about_comparisons" value="5" id="opinions_about_comparisons_5" required> Always</label>
            <!-- ... (unchanged) -->

            <br> <br><label for="seek_validation">How often do you look to seek validation from features of social media?</label>
            <input type="radio" name="seek_validation" value="1" id="seek_validation_1" required> Never</label>
            <input type="radio" name="seek_validation" value="2" id="seek_validation_2" required> Rarely</label>
            <input type="radio" name="seek_validation" value="3" id="seek_validation_3" required> Sometimes</label>
            <input type="radio" name="seek_validation" value="4" id="seek_validation_4" required> Often</label>
            <input type="radio" name="seek_validation" value="5" id="seek_validation_5" required> Always</label>

            <br> <br><label for="q1">How often do you feel depressed or down?</label>
            <input type="radio" name="feel_depressed" value="1" id="feel_depressed_1" required> Never</label>
            <input type="radio" name="feel_depressed" value="2" id="feel_depressed_2" required> Rarely</label>
            <input type="radio" name="feel_depressed" value="3" id="feel_depressed_3" required> Sometimes</label>
            <input type="radio" name="feel_depressed" value="4" id="feel_depressed_4" required> Often</label>
            <input type="radio" name="feel_depressed" value="5" id="feel_depressed_5" required> Always</label>

            <br> <br><label for="q1">How often does your interest in daily activities fluctuate?</label>
            <input type="radio" name="daily_activity_interest_fluctuations" value="1" id="daily_activity_interest_fluctuations_1" required> Never</label>
            <input type="radio" name="daily_activity_interest_fluctuations" value="2" id="daily_activity_interest_fluctuations_2" required> Rarely</label>
            <input type="radio" name="daily_activity_interest_fluctuations" value="3" id="daily_activity_interest_fluctuations_3" required> Sometimes</label>
            <input type="radio" name="daily_activity_interest_fluctuations" value="4" id="daily_activity_interest_fluctuations_4" required> Often</label>
            <input type="radio" name="daily_activity_interest_fluctuations" value="5" id="daily_activity_interest_fluctuations_5" required> Always</label>

            <br> <br><label for="sleep_issues">How often do you face issues regarding sleep?</label>
            <input type="radio" name="sleep_issues" value="1" id="sleep_issues_1" required> Never</label>
            <input type="radio" name="sleep_issues" value="2" id="sleep_issues_2" required> Rarely</label>
            <input type="radio" name="sleep_issues" value="3" id="sleep_issues_3" required> Sometimes</label>
            <input type="radio" name="sleep_issues" value="4" id="sleep_issues_4" required> Often</label>
            <input type="radio" name="sleep_issues" value="5" id="sleep_issues_5" required> Always</label>


        </fieldset>

        <!-- Submit Button -->
        <input type="submit" value="Submit">
        <a href="/" class="home-button">Go back to the home page</a>
    </form>
    
    <script>
        function validateForm() {
            // Check social media platforms
            var socialMediaCheckboxes = document.querySelectorAll('input[type="checkbox"][name="social_media_platforms[]"]');
            var isSocialMediaChecked = Array.from(socialMediaCheckboxes).some(checkbox => checkbox.checked);
    
            if (!isSocialMediaChecked) {
                alert("Please select at least one social media platform.");
                return false;
            }
    
            // Check organization affiliations
            var organizationCheckboxes = document.querySelectorAll('input[type="checkbox"][name="organizations[]"]');
            var isOrganizationChecked = Array.from(organizationCheckboxes).some(checkbox => checkbox.checked);
    
            if (!isOrganizationChecked) {
                alert("Please select at least one organization affiliation.");
                return false;
            }
    
            return true;
        }
    </script>
</body>
</html>
